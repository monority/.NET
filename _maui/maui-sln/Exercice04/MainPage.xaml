<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exercice04.MainPage" Shell.NavBarIsVisible="False">

    <VerticalStackLayout Spacing="10"  HorizontalOptions="Center" Margin="20">
        
        <Label Text="Hangman Game" FontSize="30" />
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Errors : "/>
            <Label Text="0" x:Name="displayErrorNbr"/>
            <Label Text=" /7"/>
        </HorizontalStackLayout>
        <Image Source="hangman_01.png" x:Name="hangmanImage" WidthRequest="200" HeightRequest="200" BackgroundColor="White" />
        <Entry Text="Word" x:Name="WordToFind" HorizontalTextAlignment="Center" FontSize="30"/>
    </VerticalStackLayout>
</ContentPage>
