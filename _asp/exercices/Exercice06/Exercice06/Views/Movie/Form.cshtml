@model MovieCreateViewModel
@{
    string formMode = ViewBag.FormMode;

    ViewData["Title"] = formMode switch
    {
        "Edit" => "Edit a movie",
        "Delete" => "Delete a movie",
        "Details" => "See details",
        _ => "Add a movie"
    };

    var btnColorClass = formMode switch
    {
        "Edit" => "btn-warning",
        "Delete" => "btn-danger",
        "Details" => "btn-secondary",
        _ => "btn-success"
    };

    var btnText = formMode switch
    {
        "Edit" => "Editer",
        "Delete" => "Confirmer",
        "Details" => "Retour",
        _ => "Ajouter"
    };
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form_group">
        <div class="form_element">
            <label class="label_default" asp-for="Title"></label>
        </div>
        <div class="form_element">
            <input class="input_default" asp-for="Title" />
        </div>
        <div class="form_element">
            <span asp-validation-for="Title"></span>
        </div>
    </div>
    <div class="form_group">
        <div class="form_element">
            <label class="label_default" asp-for="Director"></label>
        </div>
        <div class="form_element">
            <input class="input_default" asp-for="Director" />
        </div>
        <div class="form_element">
            <span asp-validation-for="Director"></span>
        </div>
    </div>
    <div class="form_group">
        <div class="form_element">
            <label class="label_default" asp-for="Duration"></label>
        </div>
        <div class="form_element">
            <input class="input_default" asp-for="Duration" />
        </div>
        <div class="form_element">
            <span asp-validation-for="Duration"></span>
        </div>
    </div>
    <div class="form_group">
        <div class="form_element">
            <label class="label_default" asp-for="Picture"></label>
        </div>
        <div class="form_element">
            <input class="input_default" asp-for="Picture" type="file" />
        </div>
        <div class="form_element">
            <span asp-validation-for="Picture"></span>
        </div>
    </div>
    <div class="d-flex">
        <button class="ms-auto btn @btnColorClass">
            <span class="bi bi-save"></span> @btnText
        </button>
    </div>
</form>
